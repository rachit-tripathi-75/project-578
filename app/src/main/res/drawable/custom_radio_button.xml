<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/blue_800" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
            <item android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp">
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
            <item android:bottom="9dp" android:left="9dp" android:right="9dp" android:top="9dp">
                <shape android:shape="oval">
                    <solid android:color="@color/blue_800" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <stroke android:width="2dp" android:color="#757575" />
                    <size android:width="24dp" android:height="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>