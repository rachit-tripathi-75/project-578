<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_50" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/purple_500" />
        </shape>
    </item>
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_50" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/green_300" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/gray_200" />
        </shape>
    </item>
</selector>