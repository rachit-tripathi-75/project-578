<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/light_blue_background"
        app:cardCornerRadius="32dp">

        <ImageView
            android:id="@+id/ivFeatureIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/two_people_icon" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvFeatureTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Expert Support"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvFeatureDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="24/7 customer support to help you throughout the process."
        android:textAlignment="center"
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

</LinearLayout>
