<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PaymentMethodActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_blue_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/circle_blue_background"
                    android:padding="16dp"
                    android:src="@drawable/ic_payment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Select Payment Method"
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLoanNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Loan: SBL240001234"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPaymentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹16,275"
                    android:textColor="@color/primary_blue"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Payment Method Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Tab Layout -->
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/background_primary"
                        app:tabGravity="fill"
                        app:tabIndicatorColor="@color/primary_blue"
                        app:tabIndicatorHeight="3dp"
                        app:tabMode="fixed"
                        app:tabSelectedTextColor="@color/primary_blue"
                        app:tabTextColor="@color/text_secondary">

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Net Banking" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UPI" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Card" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wallet" />
                    </com.google.android.material.tabs.TabLayout>

                    <!-- Payment Container -->
                    <LinearLayout
                        android:id="@+id/paymentContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Net Banking Layout -->
                        <LinearLayout
                            android:id="@+id/netBankingLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="Select Your Bank"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                            <Spinner
                                android:id="@+id/spinnerBank"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/spinner_background" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnNetBanking"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:background="@drawable/button_blue_primary"
                                android:drawablePadding="8dp"
                                android:text="Proceed with Net Banking"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- UPI Layout -->
                        <LinearLayout
                            android:id="@+id/upiLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="UPI ID"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/etUpiId"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginBottom="16dp"
                                android:background="@drawable/edittext_background"
                                android:hint="yourname@upi"
                                android:inputType="textEmailAddress"
                                android:padding="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:text="Or pay with"
                                android:textColor="@color/text_secondary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnGooglePay"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_outline"
                                    android:drawableStart="@drawable/ic_gpay"
                                    android:drawablePadding="4dp"
                                    android:text="GPay"
                                    android:textColor="@color/primary_blue" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnPhonePe"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_outline"
                                    android:drawableStart="@drawable/ic_phonepe"
                                    android:drawablePadding="4dp"
                                    android:text="PhonePe"
                                    android:textColor="@color/primary_blue" />
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnPaytm"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_marginBottom="16dp"
                                android:background="@drawable/button_outline"
                                android:drawableStart="@drawable/ic_paytm"
                                android:drawablePadding="8dp"
                                android:text="Paytm UPI"
                                android:textColor="@color/primary_blue" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnUpiPay"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:background="@drawable/button_blue_primary"
                                android:text="Pay with UPI"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Card Layout -->
                        <LinearLayout
                            android:id="@+id/cardLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="8dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:text="Card Number"
                                        android:textColor="@color/text_primary"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/etCardNumber"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:background="@drawable/edittext_background"
                                        android:hint="1234 5678 9012 3456"
                                        android:inputType="number"
                                        android:maxLength="19"
                                        android:padding="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:text="Cardholder Name"
                                        android:textColor="@color/text_primary"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/etCardName"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:background="@drawable/edittext_background"
                                        android:hint="Name on card"
                                        android:inputType="textPersonName"
                                        android:padding="12dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="8dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:text="Expiry Date"
                                        android:textColor="@color/text_primary"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/etExpiryDate"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:background="@drawable/edittext_background"
                                        android:hint="MM/YY"
                                        android:inputType="number"
                                        android:maxLength="5"
                                        android:padding="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:text="CVV"
                                        android:textColor="@color/text_primary"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/etCvv"
                                        android:layout_width="match_parent"
                                        android:layout_height="48dp"
                                        android:background="@drawable/edittext_background"
                                        android:hint="123"
                                        android:inputType="numberPassword"
                                        android:maxLength="4"
                                        android:padding="12dp" />
                                </LinearLayout>
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnCardPay"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:background="@drawable/button_blue_primary"
                                android:drawableStart="@drawable/ic_credit_card"
                                android:drawablePadding="8dp"
                                android:text="Pay with Card"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Wallet Layout -->
                        <LinearLayout
                            android:id="@+id/walletLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:text="Select Wallet"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnPaytmWallet"
                                    android:layout_width="0dp"
                                    android:layout_height="64dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_outline"
                                    android:drawableTop="@drawable/ic_paytm"
                                    android:drawablePadding="4dp"
                                    android:text="Paytm"
                                    android:textColor="@color/primary_blue" />

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btnAmazonPay"
                                    android:layout_width="0dp"
                                    android:layout_height="64dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_outline"
                                    android:drawableTop="@drawable/ic_amazon"
                                    android:drawablePadding="4dp"
                                    android:text="Amazon Pay"
                                    android:textColor="@color/primary_blue" />
                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnMobikwik"
                                android:layout_width="match_parent"
                                android:layout_height="64dp"
                                android:layout_marginBottom="16dp"
                                android:background="@drawable/button_outline"
                                android:drawableStart="@drawable/ic_mobikwik"
                                android:drawablePadding="8dp"
                                android:text="Mobikwik"
                                android:textColor="@color/primary_blue" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btnWalletPay"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:background="@drawable/button_blue_primary"
                                android:drawableStart="@drawable/ic_wallet"
                                android:drawablePadding="8dp"
                                android:text="Pay with Wallet"
                                android:textColor="@android:color/white"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Security Notice -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green_50"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_green_background"
                        android:padding="6dp"
                        android:src="@drawable/ic_security" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Secure Payment"
                            android:textColor="#166534"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your payment is protected with 256-bit SSL encryption and is PCI DSS compliant."
                            android:textColor="#15803D"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>