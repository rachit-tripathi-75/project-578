<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".activities.TwoWheelerLoanActivity">


    <ScrollView
        android:background="@drawable/gradient_background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:background="@drawable/header_gradient"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:background="@drawable/circle_white"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:layout_width="40dp"
                        android:padding="8dp"
                        android:src="@drawable/gccsllogo" />

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="QuickFinance"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Two Wheeler Loans"
                            android:textColor="@color/white_transparent"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:background="@drawable/badge_background"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:text="Step 1/4"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Loan Calculator Card -->
            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="@drawable/green_gradient"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:layout_width="20dp"
                            android:src="@drawable/ic_calculator"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Loan Calculator"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Loan Amount Slider -->
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Loan Amount"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <SeekBar
                            android:id="@+id/seekBarLoanAmount"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:max="450"
                            android:progress="100"
                            android:progressTint="@color/primary_blue"
                            android:thumbTint="@color/primary_blue" />

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:text="₹50K"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvLoanAmount"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="₹150K"
                                android:textColor="@color/primary_blue"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:gravity="end"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:text="₹5L"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Tenure Slider -->
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_width="wrap_content"
                            android:text="Tenure (Months)"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <SeekBar
                            android:id="@+id/seekBarTenure"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:max="48"
                            android:progress="12"
                            android:progressTint="@color/primary_blue"
                            android:thumbTint="@color/primary_blue" />

                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:text="12M"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvTenure"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="24M"
                                android:textColor="@color/primary_blue"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:gravity="end"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:text="60M"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- EMI Display -->
                        <LinearLayout
                            android:background="@drawable/emi_background"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <LinearLayout
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Monthly EMI"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tvEMI"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="₹7,500"
                                    android:textColor="@color/primary_blue"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="Interest Rate"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp" />

                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_height="16dp"
                                        android:layout_marginEnd="4dp"
                                        android:layout_width="16dp"
                                        android:src="@drawable/ic_percent"
                                        app:tint="@color/success_green" />

                                    <TextView
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:text="12%"
                                        android:textColor="@color/success_green"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Personal Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="match_parent"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="@drawable/purple_gradient"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_height="20dp"
                            android:layout_marginEnd="8dp"
                            android:layout_width="20dp"
                            android:src="@drawable/ic_user"
                            app:tint="@android:color/white" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Personal Details"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Name Fields -->
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:hint="First Name"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:layout_width="0dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etFirstName"
                                    android:inputType="textPersonName"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:hint="Last Name"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:layout_width="0dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etLastName"
                                    android:inputType="textPersonName"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Mobile Number -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:hint="Mobile Number"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            app:startIconDrawable="@drawable/ic_phone">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etMobile"
                                android:inputType="phone"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:maxLength="10" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Email -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:hint="Email Address"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            app:startIconDrawable="@drawable/ic_email">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etEmail"
                                android:inputType="textEmailAddress"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Date of Birth -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:hint="Date of Birth"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent"
                            app:startIconDrawable="@drawable/ic_calendar">

                            <com.google.android.material.textfield.TextInputEditText
                                android:clickable="true"
                                android:focusable="false"
                                android:id="@+id/etDOB"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- PAN Number -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:hint="PAN Number"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_width="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etPAN"
                                android:inputType="textCapCharacters"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:maxLength="10" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Apply Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:background="@drawable/apply_button_gradient"
                android:id="@+id/btnApplyLoan"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:text="Apply for Loan"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp" />

            <!-- Features -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_height="32dp"
                        android:layout_width="32dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="@color/success_green" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:text="Quick Approval"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_height="32dp"
                        android:layout_width="32dp"
                        android:src="@drawable/ic_percent"
                        app:tint="@color/primary_blue" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:text="Low Interest"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_height="32dp"
                        android:layout_width="32dp"
                        android:src="@drawable/ic_clock"
                        app:tint="@color/warning_orange" />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:text="Fast Disbursal"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>